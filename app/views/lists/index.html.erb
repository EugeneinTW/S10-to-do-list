<div class="container">
  <h1>待辦事項</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>待辦項目</th>
      <th>詳細內容</th>
      <th>內容編輯</th>
      <th>截止日</th>
      <th>刪除項目</th>
    </tr>
  </thead>
  <tbody>
  <% @lists.each do |list| %>
  <tr>
    <td><%= list.title %></td>
    <td><%= link_to 'Show' , list_path(list) %></td>
    <td><%= link_to 'Edit' , edit_list_path(list) %></td>
    <td><%= list.due_date.to_s.slice(0..9) %></td>
    <td><%= link_to 'Destroy' , list_path(list), method: :delete, data:{ confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</tbody>
</table>

<%= link_to 'New to do list', new_list_path %>
</div>
